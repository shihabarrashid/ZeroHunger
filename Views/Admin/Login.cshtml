
@{
    ViewBag.Title = "Login";
}

<h2>Login</h2>
<div class="container">
    <div class="text-danger">@TempData["message"]</div>
    <form method="post" action="" class="form">
        <input class="form-control" type="text" name="Username" value="" placeholder="Username" /><br>
        <input class="form-control" type="password" name="Password" value="" placeholder="Password" /><br>
        <input class="btn btn-success" type="submit" name="submit" value="Login" /><br>
    </form>
</div>